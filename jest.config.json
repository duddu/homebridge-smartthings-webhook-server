{
  "clearMocks": true,
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coveragePathIgnorePatterns": ["/node_modules/"],
  "coverageProvider": "babel",
  "preset": "ts-jest",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.spec\\.ts$": [
      "ts-jest",
      {
        "tsconfig": "test/tsconfig.test.json"
      }
    ]
  },
  "verbose": true
}
